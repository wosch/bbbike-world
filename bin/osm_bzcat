#!/bin/sh
# Copyright (c) 2009-2013 Wolfram Schneider, http://bbbike.org
#
# linux wrapper for (parallel) bzip2

PATH=/bin:/usr/bin:/opt/local/bin; export PATH

if which pbzip2 >/dev/null; then
	bzcat='pbzip2 -dc'
else
	bzcat='bzip2 -dc'
fi

if which buffer >/dev/null && test -e /proc ; then
	$bzcat "$@" | buffer -m 6400k
else
	$bzcat "$@"
fi

