# German
sub de_7bit {
    my $s = shift;

    $s =~ s/Ä/Ae/g;
    $s =~ s/Ö/Oe/g;
    $s =~ s/Ü/Ue/g;
    $s =~ s/ä/ae/g;
    $s =~ s/ö/oe/g;
    $s =~ s/ü/ue/g;
    $s =~ s/ß/ss/g;
    $s =~ s/é/e/g;
    $s =~ s/è/e/g;
    $s =~ s/á/a/g;

    return $s;
}

# English: eszet -> B
sub de_en {
    my $s = shift;

    $s =~ s/Ä/A/g;
    $s =~ s/Ö/O/g;
    $s =~ s/Ü/U/g;
    $s =~ s/ä/a/g;
    $s =~ s/ö/o/g;
    $s =~ s/ü/u/g;
    $s =~ s/ß/B/g;
    $s =~ s/é/e/g;
    $s =~ s/è/e/g;

    return $s;
}

# English II: eszet -> ss
sub de_en_2 {
    my $s = shift;

    $s =~ s/Ä/A/g;
    $s =~ s/Ö/O/g;
    $s =~ s/Ü/U/g;
    $s =~ s/ä/a/g;
    $s =~ s/ö/o/g;
    $s =~ s/ü/u/g;
    $s =~ s/ß/ss/g;
    $s =~ s/é/e/g;
    $s =~ s/è/e/g;

    return $s;
}

# slavic languages (polish, croatian, czech)
sub slavic {
    my $s = shift;

    $s =~ s,Ë,E,g;
    $s =~ s,á,a,g;
    $s =~ s,ó,o,g;
    $s =~ s,Ć,C,g;
    $s =~ s,Č,C,g;
    $s =~ s,Đ,D,g;
    $s =~ s,Ł,L,g;
    $s =~ s,Ś,S,g;
    $s =~ s,Š,S,g;
    $s =~ s,Ź,Z,g;
    $s =~ s,Ż,Z,g;
    $s =~ s,ć,c,g;
    $s =~ s,č,c,g;
    $s =~ s,đ,d,g;
    $s =~ s,ę,e,g;
    $s =~ s,ł,l,g;
    $s =~ s,ń,n,g;
    $s =~ s,ą,q,g;
    $s =~ s,ś,s,g;
    $s =~ s,š,s,g;
    $s =~ s,Ź,z,g;
    $s =~ s,ź,z,g;
    $s =~ s,ż,z,g;
    $s =~ s,Ž,z,g;
    $s =~ s,ž,z,g;

    $s =~ s/ß/ss/g;

    return $s;
}

